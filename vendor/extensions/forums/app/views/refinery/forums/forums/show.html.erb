<% content_for :body_content_title do %>
  <%= @forum.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @forum.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @forum.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="forums">
      <% @forums.each do |forum| %>
        <li>
          <%= link_to forum.name, refinery.forums_forum_path(forum) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
