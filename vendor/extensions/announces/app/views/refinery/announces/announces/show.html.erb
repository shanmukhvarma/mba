<% content_for :body_content_title do %>
  <%= @announce.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @announce.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @announce.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="announces">
      <% @announces.each do |announce| %>
        <li>
          <%= link_to announce.title, refinery.announces_announce_path(announce) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
