<% content_for :body_content_title do %>
  <%= @testimonial.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @testimonial.name %>
    </p>
  </section>
  <section>
    <h1>Role</h1>
    <p>
      <%=raw @testimonial.role %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @testimonial.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="testimonials">
      <% @testimonials.each do |testimonial| %>
        <li>
          <%= link_to testimonial.name, refinery.testimonials_testimonial_path(testimonial) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
