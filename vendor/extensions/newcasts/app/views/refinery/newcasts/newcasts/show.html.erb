<% content_for :body_content_title do %>
  <%= @newcast.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @newcast.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @newcast.description %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @newcast.url %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="newcasts">
      <% @newcasts.each do |newcast| %>
        <li>
          <%= link_to newcast.title, refinery.newcasts_newcast_path(newcast) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
