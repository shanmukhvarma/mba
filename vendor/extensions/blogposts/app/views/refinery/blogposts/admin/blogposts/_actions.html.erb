<ul>
  <% if ::Refinery::Blogposts::Admin::BlogpostsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.blogposts_admin_blogposts_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_blogposts_admin_blogpost_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Blogposts::Admin::BlogpostsController.sortable? && ::Refinery::Blogposts::Blogpost.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Blogposts"),
                 refinery.blogposts_admin_blogposts_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Blogposts"),
                 refinery.blogposts_admin_blogposts_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
