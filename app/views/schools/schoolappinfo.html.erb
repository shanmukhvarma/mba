<div class="gdlr-lms-content">
	<div class="two columns"><%= ad_unit(:skyscraper, "pub-6430317842295107", {:slot => "5305317726"}) %></div>	
	<div class="eight columns">
	

		<div style="margin-left:1px;margin-right:1px">
			<div class="eleven columns">
				<div class="gdlr-item-title-wrapper gdlr-item pos-left borderme" style="margin-left: 1px;">
						<div class="gdlr-space" style="margin-top: 40px;"></div>
						<table class="style-2">
						<tbody style="text-align:left">
						<tr>
							<th id="th" colspan="3">Name</th>
							<th id="th" colspan="3">Email</th>
							<th id ="th"colspan="2">scholarship</th>
							<th id ="th"colspan="2">status</th>
						</tr>
							<% unless @school.nil? %>
								
							
							<tr>
								<td colspan="3" style="padding:10px"> 
									
										<% 
											@user=Member.find_by_id(@school.user_id) 
											@user.username
											# binding.pry
										%> 
									<a href="<%= static_profile_path(@user.username) %>" style="text-decoration:underline;"> 
										<%= @user.username  %>
									</a>
								</td> 
								<td colspan="3" style="padding:10px"> 
									
										<% 
											@user=Member.find_by_id(@school.user_id) 
											@user.email
											# binding.pry
										%> 
										<%= @user.email %>
									
								</td> 
								 
								<td colspan="2" style="padding:10px"> 
									<%= @school.scholarship  %>
								</td>	
								<td colspan="2" style="padding:10px"> 
									<%= @school.status	 %>
