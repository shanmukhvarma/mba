		if(email == "")
		{
			document.getElementById('error').innerHTML ="Please Enter Email";
			return false;
		}
		else if(!re.test(email))
		{
			document.getElementById('error').innerHTML ="Please Enter Valid Email";
			return false;
		}
		
	}
