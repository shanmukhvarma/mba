

<%#binding.pry%>

<%@member = Member.find(mydata.user_id) %>
<ol class="commentlist">
	<li class="comment byuser comment-author-gdadmin bypostauthor even thread-even depth-1" id="li-comment-7">
		<article id="comment-7" class="comment-article">
	
			<div class="comment-avatar">
			<% unless @member.image.nil? %>
			<img alt="" src="<%=@member.image.thumb('60x60').url%>" class="avatar avatar-60 photo" height="60" width="60" style="opacity:1;">
			<% else %>
			 <img src="/assets/profile.png" alt="Edit Entry" style="width:60px;height:60px;" />
			<% end %>
			</div>
			<div class="comment-body">
				<header class="comment-meta" style="  text-align: left;">
					<div class="comment-author gdlr-title" style="text-align: left;"><%= @member.username %></div>
					<div class="comment-time">
						<i class="icon-time"></i>
						<a href="">
							<time style="font-size: 14px;"><%=mydata.created_at.strftime('%A, %d %b %Y %l:%M %p') %></time>
						</a>
					</div>
				</header>
				<section class="comment-content">
					<h5><%=mydata.title %></h5>
					<p><%=mydata.comment %></p>
					<% if current_user.id == mydata.user_id || params[:action] == "index"  %>
					<a href="<%=profile_comndestroy_path(mydata.id)%>" style="color:#d6724f"><i class="gdlr-icon icon-remove" ></i>Delete</a>
				<% end %>
				</section>
				<!-- comment-content -->
			</div><!-- comment-body -->
		</article><!-- comment-article -->
	</li><!-- #comment-## -->
</ol>
